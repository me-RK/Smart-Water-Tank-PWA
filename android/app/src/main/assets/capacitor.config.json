{
	"appId": "com.smartwatertank.app",
	"appName": "Smart Water Tank",
	"webDir": "dist",
	"server": {
		"androidScheme": "https",
		"cleartext": true,
		"allowNavigation": [
			"192.168.*.*",
			"10.*.*.*",
			"172.16.*.*",
			"localhost"
		]
	},
	"android": {
		"allowMixedContent": true,
		"backgroundColor": "#ffffff",
		"webContentsDebuggingEnabled": true
	},
	"plugins": {
		"SplashScreen": {
			"launchShowDuration": 2000,
			"backgroundColor": "#3b82f6",
			"showSpinner": false
		},
		"PushNotifications": {
			"presentationOptions": [
				"badge",
				"sound",
				"alert"
			]
		}
	}
}
