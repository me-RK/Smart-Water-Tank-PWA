<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- ALLOW ALL CLEARTEXT TRAFFIC FOR DEVELOPMENT -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Debug configuration -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>